
#Aside

  %ul.menu
    -@children.each do |child|
      -if content = child.contents.find_by(lang: locale)
        %li
          =link_to child.slug do
            %span= content.title

  = raw module_to(@modules, 'left')

#MainCol
  .text.clearFix
    = raw module_to(@modules, 'top')
    %h1= @content.title
    %p= raw @content.body
  .MaincolModule.clearFix
    = raw module_to(@modules, 'bottom')


-content_for :pathway do
  -if @page.parent
    -@parent = @page.parent.contents.find_by(lang: locale)
  #showcase
    %span.breadcrumbs.pathway
      =link_to @home.contents.find_by(lang: locale).title, "/#{locale}", :class => "pathway"
      |
      -if @parent
        =link_to @parent.title, "/#{locale}/#{@page.slug}", :class => "pathway"
        |
      =@content.title


